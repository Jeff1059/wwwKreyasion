{
    "redirects": [
        {
            "source": "/content/pages/:page*",
            "destination": "/:page*",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/:page*",
            "destination": "/content/pages/:page*"
        }
    ],
    "headers": [
        {
            "source": "/admin/config.yml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/yaml"
                }
            ]
        },
        {
            "source": "/en-construction.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        }
    ]
}