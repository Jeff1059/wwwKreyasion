---
pagination:
    data: collections.blogPosts
    size: 1
    alias: article
    addAllPagesToCollections: true
permalink: "/blog/{{ article.id }}/index.html"
layout: layouts/base.njk
eleventyComputed:
  seo:
    title: "{{ article.meta.title }}"
    description: "{{ article.meta.description }}"
    canonical: "{{ article.meta.canonical }}"
    og_title: "{{ article.meta['og:title'] }}"
    og_description: "{{ article.meta['og:description'] }}"
    og_image: "{{ article.meta['og:image'] }}"
---

{% set meta = article.meta %}

<section id="article-cover">
    <div class="container">
        <div class="cover">
            <img src="{{ article.image }}" alt="">
            <div class="page-header">
                <h1 class="section-title">{{ article.headerTitle }}</h1>
                <p class="article-meta sub-title">
                    <span>{{ article.date }}</span> •
                    <span>{{ article.readTime }}</span> •
                    <span>{{ article.category }}</span>
                </p>
            </div>
        </div>
    </div>
</section>

{% set navigationBreadcrumb = [
  { title: "Accueil", url: "/" },
  { title: blog.blog.meta.title, url: "/blog/" },
  { title: article.headerTitle }
] %}

{% include "layouts/_breadcrumb.njk" %}

<main id="article-detail">
    <section class="breadcrumb-sub">

        <div class="article-content">
            {{ article.content | markdown | safe }}
        </div>

        <div class="cta">
            <div class="container">
                <div class="cta-content">
                    <h2 class="cta-title">{{ article.cta.title }}</h2>
                    {% if article.cta.description %}
                        <p class="cta-sub-title">{{ article.cta.description }}</p>
                    {% endif %}
                    <a href="{{ article.cta.button.url }}" class="main-btn">{{ article.cta.button.label }}</a>
                </div>
            </div>
        </div>
        
        <aside class="container blog-similar">
            <h3>Articles similaires</h3>
            <ul>
                {% set similar = collections.blogPosts | similarArticles(article) %}
                {% if similar.length > 0 %}
                    {% for sim in similar %}
                        <li>
                            <a href="/blog/{{ sim.id }}/">
                                <img src="{{ sim.image }}" alt="{{ sim.headerTitle }}">
                                <div class="blog-similar_title">
                                    {{ sim.headerTitle }}
                                    <div class="read-time">
                                        <svg viewBox="0 0 71 43" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <g>
                                                <g>
